@model IEnumerable<YehudaWebDev.Models.Airlines>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AirlineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirlineCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPlanes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfWorkers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearlyTravelerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfEstablishment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AirlineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirlineCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPlanes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWorkers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearlyTravelerNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfEstablishment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
