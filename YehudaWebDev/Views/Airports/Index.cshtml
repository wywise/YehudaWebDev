@model IEnumerable<YehudaWebDev.Models.Airport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AirportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportSize)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
